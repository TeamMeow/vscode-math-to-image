{
  "name": "vscode-math-to-image",
  "displayName": "Math to Image",
  "description": "üìê Render LaTeX math equations in any Markdown file",
  "license": "MIT",
  "version": "0.1.1",
  "publisher": "MeowTeam",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/vscode-math-to-image.png",
  "galleryBanner": {
    "color": "#2b3838",
    "theme": "dark"
  },
  "homepage": "https://github.com/TeamMeow/vscode-math-to-image",
  "bugs": {
    "url": "https://github.com/TeamMeow/vscode-math-to-image/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TeamMeow/vscode-math-to-image"
  },
  "activationEvents": [
    "onCommand:vscode-math-to-image.render-selection-remote",
    "onCommand:vscode-math-to-image.render-selection-local"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-math-to-image.render-selection-remote",
        "title": "Math ¬ª Image: Insert rendered equation (remote)"
      },
      {
        "command": "vscode-math-to-image.render-selection-local",
        "title": "Math ¬ª Image: Insert rendered equation (local)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-math-to-image.render-selection-remote",
          "when": "resourceLangId == markdown && editorFocus && editorHasSelection",
          "group": "modification"
        },
        {
          "command": "vscode-math-to-image.render-selection-local",
          "when": "resourceLangId == markdown && editorFocus && editorHasSelection",
          "group": "modification"
        }
      ]
    },
    "configuration": {
      "title": "vscode-math-to-image",
      "properties": {
        "vscode-math-to-image.svgSavePath": {
          "type": "string",
          "default": "Current workspace directory",
          "enum": [
            "Current file directory",
            "Current workspace directory"
          ],
          "enumDescriptions": [
            "Generated SVG files will be put in a folder under current file's directory.",
            "Generated SVG files will be put in a folder under current workspace directory."
          ]
        },
        "vscode-math-to-image.remoteRenderEngine": {
          "type": "string",
          "default": "GitHub",
          "enum": [
            "GitHub",
            "CodeCogs"
          ],
          "enumDescriptions": [
            "Equations will be rendered with GitHub's rendering engine remotely.",
            "Equations will be rendered with CodeCogs' rendering engine remotely."
          ]
        },
        "vscode-math-to-image.insertionType": {
          "type": "string",
          "default": "HTML",
          "enum": [
            "HTML",
            "Markdown"
          ],
          "enumDescriptions": [
            "Equations will be inserted as HTML.",
            "Equations will be inserted as Markdown. Note that this doesn't support styles!"
          ]
        },
        "vscode-math-to-image.inlineSvgStyle": {
          "type": "string",
          "default": "transform: translateY(0.1em); background: white;",
          "description": "Optional style for rendered inline SVG equations. (Only supported when inserting as HTML)"
        },
        "vscode-math-to-image.displaySvgStyle": {
          "type": "string",
          "default": "background: white;",
          "description": "Optional style for rendered display SVG equations. (Only supported when inserting as HTML)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vsce": "^1.77.0",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "mathjax": "^3.1.2",
    "mathjax-full": "^3.1.2"
  }
}
